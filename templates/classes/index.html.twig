{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid col-md-8 text-center">
    <br>
    <h1 class="text-nowrap bd-highlight" style="color: CadetBlue">Classes List</h1>
    <br>
    <table class="table table-striped">
        <tr style="border-color: #96D4D4">
            <th style="color: Tomato">ID</th>
            <th style="color: Tomato">Name</th>
            <th style="color: Tomato">StartDate</th>
            <th style="color: Tomato">EndDate</th>
            <th style="color: Tomato">Action</th>
        </tr>
            {% for classes in classess %}
        <tr>
            <td>{{classes.id}}</td>
            <td>{{classes.name}}</td>
            <td>{{classes.start | date('d/m/Y')}}</td>
            <td>{{classes.end | date('d/m/Y')}}</td>
            <td>
                <a class="btn btn-outline-primary" href="{{path('classes_edit', {'id': classes.id})}}">Edit</a>
                <br><br>
                <a class="btn btn-outline-danger" href="{{path('classes_delete', {'id': classes.id})}}" onclick="return confirm('Are you sure you want to delete this classes')">Delete</a>
            </td>
        </tr>
            {% endfor %}
    </table>
    <br>
    <a class="btn btn-outline-danger" href="{{ path('classes_add') }}" >Add New Classes</a>
</div>
{% endblock %}

