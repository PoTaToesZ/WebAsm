<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Student Management System{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {# navigation bar #}
        {% block nav %}
<div class="m-4">
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="container-fluid">
            <a href="#" class="navbar-brand">Home</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item dropdown">
                        <a href="{{path('student_index')}}" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Student</a>
                        <div class="dropdown-menu">
                            <a href="{{path('subject_index')}}" class="dropdown-item">Subject</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>    
</div>
        {% endblock %}
        {# Show flash messages #}
        {% block flash %}   
        <div class="container-md col-md-5 mt-3 text-center">
            {% for message in app.session.flashBag.get('Success') %}
                <p class="alert alert-success">{{ message }}</p> 
            {% endfor %}
            {% for message in app.session.flashBag.get('Error') %}
                <p class="alert alert-danger">{{ message }}</p> 
            {% endfor %}
        </div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
